<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="SaladComponentGroupTitle" parent="@style/SaladioTextView">
    <item name="android:background">@drawable/SaladCatagoryGroupTitleStyle</item>
    <item name="android:paddingTop">@dimen/SaladComponentGroupTitleVerticalPadding</item>
    <item name="android:paddingBottom">@dimen/SaladComponentGroupTitleVerticalPadding</item>
    <item name="android:paddingLeft">@dimen/SaladComponentGroupTitleHorizontalPadding</item>
    <item name="android:paddingRight">@dimen/SaladComponentGroupTitleHorizontalPadding</item>
  </style>

  <style name="PlusMinusButton" parent="@style/SaladioButton">
    <item name="android:width">@dimen/PlusMinusButtonSize</item>
    <item name="android:height">@dimen/PlusMinusButtonSize</item>
    <item name="android:background">@drawable/PlusMinusButtonStyle</item>
  </style>

  <style name="SaladioListDivider">
    <item name="android:height">@dimen/ListDividerStroke</item>
    <item name="android:background">@color/ListDividerStroke</item>
  </style>

  <style name="VerticalListDivider">
    <item name="android:width">@dimen/ListDividerStroke</item>
    <item name="android:background">@color/ListDividerStroke</item>
  </style>

  <style name="CustomSaladInformation" parent="@style/SaladioTextView">
    <item name="android:textSize">@dimen/CustomSaladInformationTextSize</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CustomSaladInformationBar">
    <item name="android:background">@drawable/CustomSaladInformationStyle</item>
    <item name="android:minHeight">@dimen/CustomSaladInformationMinHeight</item>
  </style>
</resources>
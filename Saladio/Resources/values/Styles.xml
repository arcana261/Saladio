<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="SaladComponentGroupTitle" parent="@style/SaladioTextView">
    <item name="android:background">@drawable/SaladCatagoryGroupTitleStyle</item>
    <item name="android:paddingTop">@dimen/SaladComponentGroupTitleVerticalPadding</item>
    <item name="android:paddingBottom">@dimen/SaladComponentGroupTitleVerticalPadding</item>
    <item name="android:paddingLeft">@dimen/SaladComponentGroupTitleHorizontalPadding</item>
    <item name="android:paddingRight">@dimen/SaladComponentGroupTitleHorizontalPadding</item>
  </style>

  <style name="PlusMinusButton" parent="@style/SaladioButton">
    <item name="android:width">@dimen/PlusMinusButtonOuterSize</item>
    <item name="android:height">@dimen/PlusMinusButtonOuterSize</item>
    <item name="android:background">@drawable/PlusMinusButtonStyle</item>
  </style>

  <style name="SaladioListDivider">
    <item name="android:height">@dimen/ListDividerStroke</item>
    <item name="android:background">@color/ListDividerStroke</item>
  </style>

  <style name="VerticalListDivider">
    <item name="android:width">@dimen/ListDividerStroke</item>
    <item name="android:background">@color/ListDividerStroke</item>
  </style>

  <style name="CustomSaladInformation" parent="@style/SaladioTextView">
    <item name="android:textSize">@dimen/CustomSaladInformationTextSize</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="CustomSaladInformationBar">
    <item name="android:background">@drawable/CustomSaladInformationStyle</item>
    <item name="android:minHeight">@dimen/CustomSaladInformationMinHeight</item>
  </style>
  
  <style name="SavedSaladGroupTitle" parent="@style/SaladioTextView">
    <item name="android:background">@drawable/SavedSaladGroupTitleStyle</item>
    <item name="android:paddingRight">@dimen/SavedSaladGroupTitleHorizontalPadding</item>
    <item name="android:paddingLeft">@dimen/SavedSaladGroupTitleHorizontalPadding</item>
    <item name="android:paddingTop">@dimen/SavedSaladGroupTitleVerticalPadding</item>
    <item name="android:paddingBottom">@dimen/SavedSaladGroupTitleVerticalPadding</item>
    <item name="android:textColor">@color/SavedSaladGroupTitleForeground</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="SavedSaladTitle" parent="@style/SaladioTextView">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CalendarItem" parent="@style/SaladioTextView">
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">@dimen/CalendarItemVerticalPadding</item>
    <item name="android:paddingBottom">@dimen/CalendarItemVerticalPadding</item>
  </style>
  <style name="CalendarWeekHeader" parent="@style/CalendarItem">
    <item name="android:textSize">@dimen/CelendarWeekHeaderFontSize</item>
  </style>
</resources>
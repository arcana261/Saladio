<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item android:right="@dimen/ButtonSolidRight" android:top="@dimen/ButtonSolidTop">
        <shape>
          <solid android:color="@color/ButtonSolidColor" />
          <corners android:radius="@dimen/ButtonSolidRadius" />
        </shape>
      </item>
      <item android:left="@dimen/ButtonGradientLeft" android:bottom="@dimen/ButtonGradientBottom">
        <shape>
          <gradient android:startColor="@color/ButtonSolidColor" android:endColor="@color/ButtonSolidColor" />
          <stroke android:width="@dimen/ButtonStrokeWidth" android:color="@color/SaladioPrimaryDark" />
          <corners android:radius="@dimen/ButtonGradientRadius" />
          <padding android:left="@dimen/ButtonPadding" android:top="@dimen/ButtonPadding" android:right="@dimen/ButtonPadding" android:bottom="@dimen/ButtonPadding" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:right="@dimen/ButtonSolidRight" android:top="@dimen/ButtonSolidTop">
        <shape>
          <solid android:color="@color/ButtonSolidColor" />
          <corners android:radius="@dimen/ButtonSolidRadius" />
        </shape>
      </item>
      <item android:left="@dimen/ButtonGradientLeft" android:bottom="@dimen/ButtonGradientBottom">
        <shape>
          <gradient android:startColor="@color/ButtonGradientColor" android:endColor="@color/ButtonSolidColor" />
          <stroke android:width="@dimen/ButtonStrokeWidth" android:color="@color/SaladioPrimaryDark" />
          <corners android:radius="@dimen/ButtonGradientRadius" />
          <padding android:left="@dimen/ButtonPadding" android:top="@dimen/ButtonPadding" android:right="@dimen/ButtonPadding" android:bottom="@dimen/ButtonPadding" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>